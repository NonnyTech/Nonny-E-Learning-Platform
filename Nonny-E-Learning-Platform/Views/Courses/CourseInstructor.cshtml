@using Microsoft.AspNetCore.Identity
@using NonnyE_Learning.Data.Models
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Course Instructor";
    Layout = "_Layout";
    var user = await UserManager.GetUserAsync(User);
    string fullName = $"{user?.FirstName} {user?.LastName}";
}


<section class="grey page-title">
    <div class="container">
        <div class="row">
            <div class="col-md-6 text-left">
                <h1>Course Instructors</h1>
            </div>
        </div>
    </div>
</section>
<section class="white section">
    <div class="container">
        <div class="row course-list teacher-list">
            <div class="col-md-3 col-sm-4 col-xs-12">
                <div class="shop-item-list entry">
                    <div class="">
                        <img src="https://ui-avatars.com/api/?name=Anthony+Ikemefuna&background=0D8ABC&color=fff" alt="Avatar">
                        <div class="magnifier"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-md-6">
                <div class="shop-list-desc">
                    <h4><a href="#">Anthony Ikemefuna</a></h4>
                    <div class="shopmeta">
                        <span class="pull-left"><strong>Profession :</strong> Senior Software Engineer</span>
                        <div class="rating pull-right">
                            <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i>
                        </div>
                    </div>
                    <hr class="invis clearfix">
                    <p>Anthony is a seasoned Senior Software Engineer with years of experience building scalable web solutions and mentoring developers.</p>
                    @if (User.Identity.IsAuthenticated && fullName == "Anthony Ikemefuna")
                    {
                        <a asp-controller="Courses" asp-action="ViewMyCourse" class="btn btn-default">
                            <i class="fa fa-search"></i> &nbsp; View My Courses
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-default" disabled title="Login as this instructor to view courses">
                            <i class="fa fa-lock"></i> &nbsp; View My Courses
                        </button>
                    }
                </div>
            </div>
        </div>

