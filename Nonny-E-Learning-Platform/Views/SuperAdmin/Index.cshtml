
@{
    Layout = "SuperAdmin/_SuperAdminLayout";
}
<div class="container my-5">
    <div class="text-center mb-5">
        <h2 class="font-weight-bold display-4">👨‍💼 Super Admin Dashboard</h2>
        <p class="text-muted lead">Effortlessly manage students, transactions, plans, and content.</p>
    </div>

    <div class="row mb-4">

        <!-- Students Card -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-0 shadow-lg h-100 text-center p-3">
                <div class="mb-4">
                    <i class="fa fa-users fa-4x text-primary mb-3"></i>
                </div>
                <h5 class="card-title font-weight-bold">Students</h5>
                <p class="text-muted">View and manage all registered students.</p>
                <a href="#" class="btn btn-outline-primary w-100">View Students</a>
            </div>
        </div>

        <!-- Transactions Card -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-0 shadow-lg h-100 text-center p-3">
                <div class="mb-4">
                    <i class="fa fa-credit-card fa-4x text-success mb-3"></i>
                </div>
                <h5 class="card-title font-weight-bold">Transactions</h5>
                <p class="text-muted">View all payment transactions.</p>
                <a href="@Url.Action("AllTransactions", "SuperAdmin")" class="btn btn-outline-success w-100">View Transactions</a>
            </div>
        </div>

        <!-- Manage Plans Card -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-0 shadow-lg h-100 text-center p-3">
                <div class="mb-4">
                    <i class="fa fa-cogs fa-4x text-warning mb-3"></i>
                </div>
                <h5 class="card-title font-weight-bold">Manage Plans</h5>
                <p class="text-muted">View or edit pricing plans and courses.</p>
                <a href="#" class="btn btn-outline-warning w-100">Manage Plans</a>
            </div>
        </div>

    </div>

    <div class="row">

        <!-- View Courses Card -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-0 shadow-lg h-100 text-center p-3">
                <div class="mb-4">
                    <i class="fa fa-book fa-4x text-info mb-3"></i>
                </div>
                <h5 class="card-title font-weight-bold">Courses</h5>
                <p class="text-muted">Manage or view all available courses.</p>
                <a href="#" class="btn btn-outline-info w-100">View Courses</a>
            </div>
        </div>

        <!-- View Quiz Card -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-0 shadow-lg h-100 text-center p-3">
                <div class="mb-4">
                    <i class="fa fa-question-circle fa-4x text-danger mb-3"></i>
                </div>
                <h5 class="card-title font-weight-bold">Quizzes</h5>
                <p class="text-muted">View or manage all quizzes.</p>
                <a href="#" class="btn btn-outline-danger w-100">View Quizzes</a>
            </div>
        </div>

        <!-- View Instructors Card -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-0 shadow-lg h-100 text-center p-3">
                <div class="mb-4">
                    <i class="fa fa-chalkboard-teacher fa-4x text-secondary mb-3"></i>
                </div>
                <h5 class="card-title font-weight-bold">Instructors</h5>
                <p class="text-muted">Manage or view all instructors.</p>
                <a href="#" class="btn btn-outline-secondary w-100">View Instructors</a>
            </div>
        </div>

    </div>
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        transition: all 0.3s ease;
    }
</style>